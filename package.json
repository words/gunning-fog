{
  "name": "gunning-fog",
  "version": "0.1.0",
  "description": "Formula to detect the ease of reading a text according to the Gunning fog index (1952)",
  "license": "MIT",
  "keywords": [
    "robert",
    "gunning",
    "fog",
    "readability",
    "index",
    "formula"
  ],
  "repository": "https://github.com/wooorm/gunning-fog",
  "bugs": "https://github.com/wooorm/gunning-fog/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.1",
    "esmangle": "^1.0.1",
    "is-nan": "^1.2.1",
    "nyc": "^7.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^4.0.0",
    "remark-validate-links": "^4.0.0",
    "tape": "^4.0.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-bundle": "browserify index.js --bare -s gunningFog > gunning-fog.js",
    "build-mangle": "esmangle gunning-fog.js > gunning-fog.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "gunning-fog.js",
      "gunning-fog.min.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "plugins": {
      "comment-config": null,
      "github": null,
      "lint": {
        "list-item-spacing": false
      },
      "validate-links": null
    },
    "settings": {
      "bullet": "*"
    }
  }
}
